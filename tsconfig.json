{
	"compilerOptions": {
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"outDir": "./dist/",
		"preserveConstEnums": false,
		"removeComments": true,
		"target": "es6",
		"module": "commonjs",
		"stripInternal": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"importHelpers": false,
		"noEmitHelpers": false,
		"declaration": true,
		"sourceMap": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
